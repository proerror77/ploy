# Ploy Trading System - Production Environment Variables
# Fill in ALL required values before deploy.

# Polymarket
POLYMARKET_PRIVATE_KEY=

# API Keys
THE_ODDS_API_KEY=
GROK_API_KEY=

# Database (docker-compose.prod.yml reads these)
PLOY_DB_USER=
PLOY_DB_PASSWORD=
PLOY_DB_NAME=ploy

# Control-plane auth (required)
PLOY_API_ADMIN_TOKEN=
PLOY_SIDECAR_AUTH_TOKEN=

# Runtime mode (prefer built-in internal mode)
PLOY_AGENT_FRAMEWORK_MODE=internal
PLOY_AGENT_FRAMEWORK_HARD_DISABLE_INTERNAL_AGENTS=false
PLOY_GATEWAY_ONLY=true
PLOY_DB_REQUIRED=true

# Logging
RUST_LOG=info,ploy=debug,sqlx=warn
